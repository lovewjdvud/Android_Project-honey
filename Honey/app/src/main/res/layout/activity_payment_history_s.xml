<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PaymentHistoryActivity_s"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/buy_hi"
        android:layout_marginBottom="20dp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/history_layout1_s"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/payment_history_recycler_view_s"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/history_layout2_s"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="11"
                android:src="@android:drawable/ic_menu_help"
                android:paddingHorizontal="50dp"
                android:paddingBottom="50dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="구매내역이 없습니다!"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="-130dp"
                android:layout_marginBottom="100dp"
                />

            <Button
                android:id="@+id/history_goBack_btn_s"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:text="구경하러 가기"
                />

        </LinearLayout>

    </FrameLayout>




</LinearLayout>