<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AllMenu"
    android:padding="20dp">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="900px"
                />
<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1dp"-->
<!--                android:background="#30444444"-->
<!--                android:layout_marginTop="13dp"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <EditText
                    android:id="@+id/et_main_search"
                    android:layout_width="0px"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="배고프니까 일단 검색!!"
                    android:background="@drawable/search_edit_custom"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/search_bottom_custom"
                    android:gravity="center"
                    app:icon="@drawable/ic_baseline_search_24"
                    app:iconPadding="0dp"
                    app:iconSize="15dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#30444444"
                android:layout_marginTop="13dp"/>
            <WebView
                android:id="@+id/wv_main_image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/image1"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#30444444"
                android:layout_marginBottom="13dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/mainimage_title"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/wv_main_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/mainimage2"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/wv_main_image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mainimage3"
                        />
                    <ImageView
                        android:id="@+id/wv_main_image4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mainimage4"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#30444444"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    />
                <ImageView
                    android:id="@+id/wv_main_image5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/googlemapevent"
                    />
                <Button
                    android:id="@+id/main_btn_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="지도 상세보기"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>