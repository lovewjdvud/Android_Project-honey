<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/textview_custom"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
        <TextView
            android:id="@+id/textView_tipHistory_menuName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메뉴명 : "
            android:textSize="17dp"
            />
        </LinearLayout>
<!--        <LinearLayout-->
<!--            android:layout_width="0px"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="0.5"-->
<!--            >-->
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text=" : "-->
<!--            />-->
<!--        </LinearLayout>-->
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            >
        <TextView
            android:id="@+id/textView_tipHistory_menuTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textSize="17dp"
            />
        </LinearLayout>
        <!--    0626 tip day 추가-->
        <TextView
            android:id="@+id/textView_tipHistory_TipAddDay"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="0000-11-22"
            android:gravity="right"
            android:layout_gravity="center"
            android:textSize="10dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/textView_tipHistory_menuCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
</LinearLayout>