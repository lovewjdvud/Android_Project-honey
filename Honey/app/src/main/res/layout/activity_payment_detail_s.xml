<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PaymentDetailActivity_s"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/buy_history"
            />



        <Button
            android:id="@+id/payment_Detail_cancel_btn_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="취소하기"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/point"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
    <TextView
        android:id="@+id/payment_Detail_day_tv_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문일자"
        android:textSize="20dp"
        android:layout_margin="10dp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#30444444"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />
    <TextView
        android:id="@+id/payment_Detail_buyNum_tv_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문번호"
        android:textSize="20dp"
        android:layout_margin="10dp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#30444444"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />
    <TextView
        android:id="@+id/payment_Detail_address_tv_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주소"
        android:textSize="20dp"
        android:layout_margin="10dp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#30444444"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />
    <TextView
        android:id="@+id/payment_Detail_request_tv_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="요청사항"
        android:textSize="20dp"
        android:layout_margin="10dp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#30444444"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문 내역"
        android:layout_margin="10dp"
        android:textSize="20dp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#30444444"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/payment_Detail_recycler_view_s"
            android:layout_width="match_parent"
            android:layout_height="327dp"
            android:layout_margin="10dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >
        <TextView
            android:id="@+id/payment_Detail_status_tv_s"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="주문 현황"
            android:textSize="20dp"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/payment_Detail_result_tv_s"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="주문 총합"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:gravity="right"
            />

    </LinearLayout>

  </LinearLayout>