<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".Activity.BottomSheetClient_y">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <WebView
                android:id="@+id/wv_bottomsheet_menuimg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세요"
                />
            <TextView
                android:id="@+id/tv_bottomsheet_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="처음오셨군요?"
                />
            <TextView
                android:id="@+id/tv_bottomsheet_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맛있는 메뉴와 신선한 재료를 둘러볼까요?"
                />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:id="@+id/ll_bottomsheet_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_bottom_nexttip"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="다음에 쓸게요!"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btn_bottom_gotip"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="지금 쓸게요!"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_bottomsheet_new_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btn_bottom_go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="바로가기"
                android:textStyle="bold"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>